<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:form="sap.ui.layout.form" controllerName="pwc.portal.eval.ClubEvaluations.view.Applications.RecreationalActivitiesStrategy53A.controller.ReviewNewCard">
	<Dialog horizontalScrolling="false" showHeader="true" state="None" contentWidth="auto" stretch="true" title="{i18n53A>createNewActivityLabel}" type="Standard" verticalScrolling="true" >
        <content>
        			<Button text="Print" icon="sap-icon://print" press="renderPDF" />
            <form:Form width="auto" editable="true" visible="true"  id="plans">
                <form:formContainers>
                    <form:FormContainer visible="true">
                        <form:formElements>
                            <form:FormElement visible="true">
                                <form:label>
								<Label text="{i18n53A>activityNameLabel}" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit"
									visible="true"/>
                                </form:label>
                                <form:fields>
								<Text text="{ path : 'recreationalactivities>activity_name', type : 'sap.ui.model.type.String', constraints : { minLength: 1, maxLength:  999999}}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
									<Label text="{i18n53A>ActivityTypeLabel}" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
                                </form:label>
                                <form:fields>
								<Text text="{recreationalactivities>ACTIVITY_TYPE_NAME}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
									<Label text="{i18n53A>ActivityDescriptionLabel}" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
                                </form:label>
                                <form:fields>
								<Text text="{ path: 'recreationalactivities>activity_description', type: 'sap.ui.model.odata.type.String' , constraints:{  minLength: 3, maxLength:10 } }" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
									<Label text="{i18n53A>strategic_goal}" required="true" design="Standard" width="100%"  textAlign="Begin"
										textDirection="Inherit" visible="true"/>
                                </form:label>
                                <form:fields>
								<Text text="{recreationalactivities>strategic_goal_title}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
									<Label text="{i18n53A>target_percentage}" required="true" design="Standard" width="100%"  textAlign="Begin"
										textDirection="Inherit" visible="true"/>
                                </form:label>
                                <form:fields>
								<Text text="{recreationalactivities>target_percentage}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
									<Label text="{i18n53A>target_percentage}" required="true" design="Standard" width="100%"  textAlign="Begin"
										textDirection="Inherit" visible="true"/>
                                </form:label>
                                <form:fields>
								<Text text="{recreationalactivities>target_percentage}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:fields>
                            </form:FormElement>

                        </form:formElements>
                        <form:title/>
                    </form:FormContainer>
                    <form:FormContainer visible="true">
                        <form:formElements>
                            <form:FormElement visible="true">
                                <form:label>
									<Label text="{i18n53A>related_department}" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
                                </form:label>
                                <form:fields>
								<Text text="{recreationalactivities>related_department_title}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
									<Label text="{i18n53A>finance_resource}" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
                                </form:label>
                                <form:fields>
								<Text text="{recreationalactivities>finance_resource}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                 <form:label>

									<Label text="{i18n53A>expense_allocation}" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
                                 </form:label>
                                <form:fields>
								<Text text="{recreationalactivities>expense_allocation}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                 <form:label>

									<Label text="{i18n53A>human_resources_number}" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
                                 </form:label>

                                <form:fields>
								<Text text="{recreationalactivities>human_resources_number}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                 <form:label>

									<Label text="{i18n53A>target_fans}" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
                                 </form:label>

                                <form:fields>
								<Text text="{recreationalactivities>target_fans}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:fields>
                            </form:FormElement>
 
                            <form:FormElement visible="true">
                                <form:label>
									<Label text="{i18n53A>kpi_id}" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
                                </form:label>

                                <form:fields>
								<Text text="{recreationalactivities>kpi_Title}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:fields>
                            </form:FormElement>
                             <form:FormElement visible="true">
                                <form:label>
					<Label text="{i18n53A>KPIFrequencyOfMeasure}" design="Standard" required="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:label>

                                <form:fields>
											<Text text="{=${recreationalactivities>kpi_frequency_of_measure} === 'monthly'? ${i18n53A>monthlyDrop} : ${i18n53A>yearlyDrop} }" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:fields>
                            </form:FormElement>

                            <form:FormElement visible="true">
                                <form:label>
									<Label text="{i18n53A>target_date}" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
                                </form:label>

                                <form:fields>
								<Text text="{path:'recreationalactivities>target_date', type:'sap.ui.model.type.DateTime', formatOptions: { style: 'short', strictParsing: true}}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
									<Label text="{i18n53A>Startdate}" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
                                </form:label>

                                <form:fields>
								<Text text="{path:'recreationalactivities>start_date_time', type:'sap.ui.model.type.DateTime', formatOptions: { style: 'short', strictParsing: true}}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
									<Label text="{i18n53A>Enddate}" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
                                </form:label>

                                <form:fields>
								<Text text="{path:'recreationalactivities>end_date_time', type:'sap.ui.model.type.DateTime', formatOptions: { style: 'short', strictParsing: true}}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
                                    <Label text="{i18n53A>attachment}" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:label>
								<form:fields>
									<Link  text=" {path: 'recreationalactivities>attachemnt_proof_cmis', formatter: '.urlformatter'}" visible="{= ${recreationalactivities>attachemnt_proof_cmis} !== '' ? true : false }" target="_blank"
																	href="{recreationalactivities>attachemnt_proof_cmis}" />
								</form:fields>
                            </form:FormElement>

                        </form:formElements>
                        <form:title/>
                    </form:FormContainer>
                </form:formContainers>
                <form:layout>
                    <form:ResponsiveGridLayout adjustLabelSpan="true" columnsL="2" labelSpanL="12" columnsM="2" labelSpanM="2" labelSpanS="12"/>
                </form:layout>
            </form:Form>
        </content>
        <beginButton/>
        <buttons>
            <!--<Button text="{i18n53A>submit}" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress"/>-->
            <Button text="{i18n53A>cancel}" type="Reject" iconFirst="true" width="auto" enabled="true" visible="true" press="_onButtonPress1" iconDensityAware="false"/>
        </buttons>
        <customHeader/>
        <endButton/>
        <subHeader/>
    </Dialog>
</core:FragmentDefinition>