<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:form="sap.ui.layout.form"
	controllerName="pwc.portal.eval.ClubEvaluations.view.Applications.socialevidence52G.controller.ReviewSocialEvidence">
	<Dialog horizontalScrolling="false" showHeader="true" state="None" contentWidth="auto" stretch="false"
		title="{i18n52G>createNewActivityLabel}" type="Standard" verticalScrolling="true">
		<content>
			<form:Form width="auto" editable="true" visible="true">
				<form:formContainers>
					<form:FormContainer visible="true">
						<form:formElements>
							<form:FormElement visible="true">
								<form:label>
									<Label text="{i18n52G>activityNameLabel}" design="Bold" width="100%" required="true" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
								</form:label>
								<form:fields>
									<Text text="{ path : 'socialevidence>activity_name', type : 'sap.ui.model.type.String', constraints : { minLength: 3, maxLength: 100 } }"
										width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="{i18n52G>ActivityTypeLabel}" design="Bold" width="100%" required="true" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
								</form:label>
								<form:fields>
									<Text text="{socialevidence>ACTIVITY_TYPE_NAME}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="false">
								<form:label>
									<Label text="{i18n52G>ActivityDescriptionLabel}" design="Bold" width="100%" required="true" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
								</form:label>
								<form:fields>
									<Text
										text="{ path: 'socialevidence>activity_description', type: 'sap.ui.model.odata.type.String' , constraints:{ minLength: 3, maxLength:10 } }"
										width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="false">
								<form:label>
									<Label text="{i18n52G>strategic_goal}" required="true" design="Bold" width="100%" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Text text="{socialevidence>strategic_goal_title}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="false">
								<form:label>
									<Label text="{i18n52G>target_percentage}" required="true" design="Bold" width="100%" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
								</form:label>
								<form:fields>
									<Text text="{socialevidence>target_percentage}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true"/>
							<form:FormElement xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:form="sap.ui.layout.form" visible="false" id="element15">
								<form:label>
									<Label xmlns="sap.m" text="{i18n52G>related_department}" design="Bold" width="100%" required="false" textAlign="Begin"
										textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Text xmlns="sap.m" text="{socialevidence>related_department_title}" width="auto" maxLines="0" wrapping="true" textAlign="Begin"
										textDirection="Inherit" visible="true" id="text19"/>
								</form:fields>
							</form:FormElement>
						</form:formElements>
						<form:title/>
					</form:FormContainer>
					<form:FormContainer visible="true">
						<form:formElements>
							<form:FormElement visible="false">
								<form:label>
									<Label text="{i18n52G>finance_resource}" design="Bold" width="100%" required="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Text text="{socialevidence>finance_resource}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="false">
								<form:label>
									<Label text="{i18n52G>expense_allocation}" design="Bold" width="100%" required="true" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
								</form:label>
								<form:fields>
									<Text text="{socialevidence>expense_allocation}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="false">
								<form:label>
									<Label text="{i18n52G>human_resources_number}" design="Bold" width="100%" required="true" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
								</form:label>
								<form:fields>
									<Text text="{socialevidence>human_resources_number}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="false">
								<form:label>
									<Label text="{i18n52G>kpi_id}" design="Bold" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Text text="{socialevidence>kpi_Title}" width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="false">
								<form:label>
									<Label text="{i18n52G>target_date}" design="Bold" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Text text="{path:'socialevidence>target_date', type:'sap.ui.model.type.DateTime', formatOptions: { style: 'short', strictParsing: true}}"
										width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="false">
								<form:label>
									<Label text="{i18n52G>Startdate}" design="Bold" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Text
										text="{path:'socialevidence>start_date_time', type:'sap.ui.model.type.DateTime', formatOptions: { style: 'short', strictParsing: true}}"
										width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="false">
								<form:label>
									<Label text="{i18n52G>Enddate}" design="Bold" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Text text="{path:'socialevidence>end_date_time', type:'sap.ui.model.type.DateTime', formatOptions: { style: 'short', strictParsing: true}}"
										width="auto" maxLines="0" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="{i18n52G>attachment}" design="Bold" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Link text=" {path: 'socialevidence>attachemnt_proof_cmis', formatter: '.urlformatter'}"
										visible="{= ${socialevidence>attachemnt_proof_cmis} !== '' ? true : false }" target="_blank" href="{socialevidence>attachemnt_proof_cmis}"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:form="sap.ui.layout.form" visible="true" id="element14">
								<form:label>
									<Label xmlns="sap.m" text="{i18n52G>sharinglink}" design="Bold" width="100%" required="false" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
								</form:label>
								<form:fields>
									<Link xmlns="sap.m" href="{socialevidence>proof_link}" text="{socialevidence>proof_link}"/>
								</form:fields>
							</form:FormElement>
						</form:formElements>
						<form:title/>
					</form:FormContainer>
				</form:formContainers>
				<form:layout>
					<form:ResponsiveGridLayout adjustLabelSpan="true" columnsL="2" labelSpanL="12" columnsM="2" labelSpanM="2" labelSpanS="12"/>
				</form:layout>
			</form:Form>
		</content>
		<beginButton/>
		<buttons>
			<!--<Button text="{i18n52G>submit}" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress"/>-->
			<Button text="{i18n52G>cancel}" type="Reject" iconFirst="true" width="auto" enabled="true" visible="true" press="_onButtonPress1"
				iconDensityAware="false"/>
		</buttons>
		<customHeader/>
		<endButton/>
		<subHeader/>
	</Dialog>
</core:FragmentDefinition>